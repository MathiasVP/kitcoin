{
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": ["./src/**/*"],
	"exclude": ["frontend"]
}
