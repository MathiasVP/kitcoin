{
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": "dist",
		"lib": ["esnext"],
		"target": "es5",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"],
	"exclude": ["frontend"]
}
