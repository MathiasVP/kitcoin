	"version": "0.2.0",
	"configurations": [
		{
			"name": "Watch Debug",
			"type": "node",
			"autoAttachChildProcesses": true,
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"console": "integratedTerminal",
			"args": [
				"dev", "--watch"
			]
		},
		{
			"name": "Dev Debug",
			"type": "node",
			"autoAttachChildProcesses": true,
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"console": "integratedTerminal",
			"args": [
				"dev"
			]
		},
		{
			"name": "Node",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/src/index.ts",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"args": []
		}
	]
}